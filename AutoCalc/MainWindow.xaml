<Window x:Class="AutoCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCalc"
        mc:Ignorable="d"
        Title="AutoCalc" Height="150" Width="634.475" MaxHeight="150" MinHeight="150">
    <Grid Background="Black" Margin="0" MaxHeight="140" MinHeight="140" Height="140">
        <TextBox x:Name="formulaBox" Height="38" Margin="10,10,10,0" Text="1" VerticalAlignment="Top" FontSize="24" Background="#FF464646" Foreground="#FFD4D4D4"/>
        <Label x:Name="resultLabel" Content="0" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Foreground="#FFBB5252" FontSize="26" FontWeight="Bold"/>
        <Label x:Name="infoLabel" Content="info" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Height="24" Width="248" Foreground="Gainsboro" ForceCursor="True" FontSize="11"/>

    </Grid>
</Window>
